{
  "name": "ブラウザ赤シート",
  "version": "1.0",
  "description": "Webサイトの赤文字を赤シートで隠せる拡張機能です。",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/red16.png",
      "32": "/images/red32.png",
      "48": "/images/red48.png",
      "128": "/images/red128.png"
    }
  },
  "icons": {
    "16": "/images/red16.png",
    "32": "/images/red32.png",
    "48": "/images/red48.png",
    "128": "/images/red128.png"
  },
  "manifest_version": 3
}